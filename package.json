		"publint": "^0.2.8",
		"svelte": "^5.0.0-next.144",
		"svelte-check": "^3.7.1",
		"three": "^0.164.1",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.12",
		"vitest": "^1.6.0"
